                    <div class="avatar2" style="background-image: url({{ this.author.avatarPath }})" alt="Avatar"></div>  
                  </li>
                {{/each}}
              </ul> --}}
              <a href="/jokes/{{this._id}}" class="btn btn-warning btn-sm mt-2">Ver comentarios y comentar</a>
            </li>
