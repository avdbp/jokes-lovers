<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="header-card">
        <h2>Lista de Chistes Publicados</h2>
      </div>
      <div class="body-card">
        <ul class="list-group">
          {{#each jokes}}
            <li class="list-group-item">
              <p class="mb-2"> {{this.content}}</p>
              <h5 class="mb-2">Publicado por: {{this.author.username}}</h5>
              <p>el {{formattedCreatedAt}}</p>
              <div class="avatar" style="background-image: url({{ this.author.avatarPath }})" alt="Avatar"></div>
              {{!-- <h4 class="mb-2"><strong>Comentarios:</strong></h4> --}}
              {{!-- <ul class="list-group">
