<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="header-card">
        <h2>Detalles del Chiste</h2>
      </div>
      <div class="body-card">
        <p>Autor: {{joke.author.name}}</p>
        <p>Contenido: {{joke.content}}</p>
        <h5>Comentarios</h5>
        <ul class="list-group">
          {{#each joke.comments}}
            <li class="list-group-item">
              <p>Por: {{this.author.username}}</p>
              <p>{{this.content}}</p>
            </li>
          {{/each}}
        </ul>
        <form action="/jokes/{{joke._id}}/comment" method="POST">
          <div class="form-group">
            <label for="content">Comentario:</label>
            <textarea class="form-control" name="content" id="content" required></textarea>
          </div>
          <button type="submit" class="btn btn-warning">Agregar Comentario</button>
        </form>
      </div>
    </div>
  </div>
</div>
