<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="header-card">
        <h2>Detalles del Chiste</h2>
      </div>
      <div class="body-card">
        <p>Contenido: {{joke.content}}</p>
         <div class="joke-list-user">
          <div class="avatar" style="background-image: url({{ joke.author.avatarPath }})" alt="Avatar"></div>
          <p>Publicado por: <strong>{{joke.author.username}}</strong></p>
        </div>
        <p>el <strong>{{formattedCreatedAt}}</strong></p><br/>
        <h3>Comentarios</h3>
        <ul class="list-group">
          {{#if joke.comments.length}}
            {{#each joke.comments}}
            <li class="list-group-item">  
              <p>{{this.content}}</p>
              <div class="joke-list-user">
                <div class="avatar2" style="background-image: url({{ this.author.avatarPath }})" alt="Avatar"></div>
                <p>Publicado por: <strong>{{this.author.username}}</strong></p>
            </div>
              <p>el <strong>{{formattedCreatedAt}}</strong></p>
            </li>
            {{/each}}
          {{else}}
                <li class="list-group-item">
                  <p style="color:brown;">Aún no hay comentarios en esta publicación.</p>
                </li>
            {{/if}}
        </ul>
        <form action="/jokes/{{joke._id}}/comment" method="POST">
          <div class="form-group">
            <label for="content">Comentario:</label>
            <textarea class="form-control" name="content" id="content" required></textarea>
          </div>
          <button type="submit" class="btn btn-warning">Agregar Comentario</button>
        </form>
      </div>
    </div>
  </div>
</div>
